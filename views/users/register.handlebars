<div class="row">
	
	<div class="col-md-6 mx-auto">
		
		<div class="card card-body">
			<img class="ideapic" src="/img/idea.png">
			<h3 class="text-center"> Account Register</h3>
			<form method="post" action="/users/register">
				<div class="form-group">
			 	
			 <label for='name'>Name</label>
             <input type="text" name="name" class="form-control" required="true" value={{name}}>
             
			 </div>
			 <div class="form-group">
			 	
			 <label for='email'>Email</label>
             <input type="email" name="email" class="form-control" required="true" value={{email}}>
             
			 </div>	
             <div class="form-group ">
			 	
			 <label for='password'>Password</label>
             <input type="password" name="password" class="form-control" required="true" value={{password}}>
             </div>
             <div class="form-group ">
			 	
			 <label for='password2'>Confirm Password</label>
             <input type="password" name="password2" class="form-control" required="true" value={{password2}}>
             </div>
             <button class="btn btn-primary ">Submit</button>
			 
			</form>
		</div>
	</div>

</div>